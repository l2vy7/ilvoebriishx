        <TextView android:layout_gravity="center_vertical" android:id="@+id/tv_btn" android:padding="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
