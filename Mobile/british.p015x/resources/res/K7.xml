<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="bottom" android:orientation="vertical" android:background="#cc757575" android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="ltr">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp">
        <ImageButton android:layout_gravity="center" android:id="@+id/exo_play" android:background="#00000000" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/exo_controls_play"/>
        <ImageButton android:layout_gravity="center" android:id="@+id/exo_pause" android:background="#00000000" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/exo_controls_pause"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffbebebe" android:id="@+id/exo_position" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
        <com.google.android.exoplayer2.p041ui.DefaultTimeBar android:id="@+id/exo_progress" android:layout_width="0dp" android:layout_height="26dp" android:layout_weight="1"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffbebebe" android:id="@+id/exo_duration" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
        <FrameLayout android:layout_gravity="right" android:id="@+id/exo_fullscreen_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginStart="10dp">
            <ImageView android:layout_gravity="center" android:id="@+id/exo_fullscreen_icon" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/fvl_fullscreen_reader_white" android:scaleType="fitCenter" android:adjustViewBounds="true"/>
        </FrameLayout>
        <FrameLayout android:layout_gravity="right" android:id="@+id/exo_download_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="5dp">
            <ImageView android:layout_gravity="center" android:id="@+id/exo_download_icon" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/fvl_download_white" android:scaleType="fitCenter" android:adjustViewBounds="true"/>
        </FrameLayout>
        <FrameLayout android:layout_gravity="right" android:id="@+id/exo_cast_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="5dp">
            <androidx.mediarouter.app.MediaRouteButton android:layout_gravity="center" android:id="@+id/vcv_img_cast" android:layout_width="32dp" android:layout_height="32dp" android:adjustViewBounds="true" android:mediaRouteTypes="user"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
