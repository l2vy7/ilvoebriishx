<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/ll_list_item" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center" android:id="@+id/iv_item" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:scaleType="centerCrop" android:adjustViewBounds="true" android:layout_marginStart="10dp"/>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginStart="10dp">
                    <TextView android:textSize="16dp" android:textStyle="bold" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="16dp" android:id="@+id/antiguedad" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="16dp" android:textStyle="bold" android:id="@+id/precio" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/precio" android:drawableStart="@drawable/precio"/>
                    <TextView android:id="@+id/tv_aux" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="end" android:layout_gravity="end" android:id="@+id/ll_item_der" android:layout_width="16px" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:background="#ff000000" android:layout_width="1dp" android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/iv_item_sel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/item_sel"/>
    </FrameLayout>
</LinearLayout>
