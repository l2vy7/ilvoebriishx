<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:layout_gravity="center_horizontal" android:id="@+id/tv_nick" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="@string/nombre" android:width="200dp" android:singleLine="true" android:inputType="textPersonName"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Spinner android:id="@+id/sp_dist" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:prompt="@string/selecciona"/>
                <Spinner android:id="@+id/sp_sexo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:prompt="@string/selecciona"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Spinner android:id="@+id/sp_edad1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:prompt="@string/selecciona"/>
                <Spinner android:id="@+id/sp_edad2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:prompt="@string/selecciona"/>
            </LinearLayout>
            <TextView android:layout_gravity="center" android:id="@+id/btn_aceptar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/aceptar" android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
