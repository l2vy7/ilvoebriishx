<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_princ" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_filtros" android:background="#ffffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="70dp" android:layout_alignParentLeft="true" android:layout_centerInParent="true" android:layout_marginEnd="70dp" android:layout_alignParentStart="true">
                <ImageView android:id="@+id/iv_filtro" android:layout_width="wrap_content" android:layout_height="30dp" android:src="@drawable/filtro" android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_centerInParent="true" android:layout_alignParentStart="true"/>
                <TextView android:textColor="#ff000000" android:id="@+id/tv_filtrar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/filtrar" android:maxLines="1" android:layout_toRightOf="@+id/iv_filtro" android:layout_centerInParent="true" android:layout_toEndOf="@+id/iv_filtro"/>
                <TextView android:textColor="#ff000000" android:id="@+id/tv_fdist" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_filtrar" android:layout_centerInParent="true" android:layout_toEndOf="@+id/tv_filtrar"/>
                <TextView android:textColor="#ff000000" android:id="@+id/tv_fsexo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_fdist" android:layout_centerInParent="true" android:layout_toEndOf="@+id/tv_fdist"/>&quot; 
                <TextView android:textColor="#ff000000" android:id="@+id/tv_fedad1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_fsexo" android:layout_centerInParent="true" android:layout_toEndOf="@+id/tv_fsexo"/>
                <TextView android:textColor="#ff000000" android:id="@+id/tv_fedad2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_fedad1" android:layout_centerInParent="true" android:layout_toEndOf="@+id/tv_fedad1"/>
                <TextView android:textColor="#ff000000" android:ellipsize="end" android:id="@+id/tv_fnick" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_fedad2" android:layout_centerInParent="true" android:layout_toEndOf="@+id/tv_fedad2"/>
            </RelativeLayout>
            <ImageView android:id="@+id/btnperfil" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:src="@drawable/perfil" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View android:background="#ffe0e0e0" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:id="@+id/rl_fondo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:id="@+id/iv_fondo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            <GridView android:gravity="center" android:id="@+id/grid" android:padding="0dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:drawSelectorOnTop="true" android:horizontalSpacing="5dp" android:verticalSpacing="5dp" android:stretchMode="columnWidth" android:columnWidth="100dp" android:numColumns="auto_fit"/>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_ad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
        <include layout="@layout/bottom_menu"/>
    </LinearLayout>
    <ListView android:layout_gravity="start" android:id="@+id/left_drawer" android:layout_width="240dp" android:layout_height="match_parent" android:choiceMode="singleChoice"/>
</androidx.drawerlayout.widget.DrawerLayout>
