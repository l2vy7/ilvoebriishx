            </LinearLayout>
            <TextView android:id="@+id/tv_coment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false"/>
        </LinearLayout>
        <ImageView android:layout_gravity="top" android:id="@+id/iv_elimcoment" android:visibility="gone" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/eliminar" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        <ImageView android:layout_gravity="top" android:id="@+id/iv_spamcoment" android:visibility="gone" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/spam_p" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
